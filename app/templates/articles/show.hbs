<div class="form-horizontal">
	<div class="row">
		<div class="col-md-12">
		  <div class="form-group">
		    <label class="col-xs-12 col-sm-12 col-md-4 col-lg-2 control-label">Article Name</label>
		    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-10">
		      <p class="form-control-static">{{model.name}}</p>
		    </div>
		  </div>
		  <div class="col-xs-12 col-sm-12">
			  	<button class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> {{link-to "Edit" "articles.edit" model}}</button>
			  	<button class="btn btn-danger" {{action "delete" model}}><span class="glyphicon glyphicon-trash"></span> Delete</button>
			</div>
		</div>
	</div>
</div>
