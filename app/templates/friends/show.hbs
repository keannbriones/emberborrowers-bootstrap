<div class="form-horizontal">
	<div class="row">
		<div class="col-md-4">
			{{fill-murray width=200 height=200}}
		</div>
		<div class="col-md-8">
		  <div class="form-group">
		    <label class="col-xs-12 col-sm-12 col-md-4 col-lg-2 control-label">Full Name</label>
		    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-10">
		      <p class="form-control-static">{{model.fullName}}</p>
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="col-xs-12 col-sm-12 col-md-4 col-lg-2 control-label">Email Address</label>
		    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-10">
		      <p class="form-control-static">{{model.email}}</p>
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="col-xs-12 col-sm-12 col-md-4 col-lg-2 control-label">Twitter</label>
		    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-10">
		      <p class="form-control-static">{{model.twitter}}</p>
		    </div>
		  </div>
		  <div class="col-xs-12 col-sm-12">
		  		<button class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> {{link-to "Lend Article" "loans.new" model}}</button>
			  	<button class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> {{link-to "Edit" "friends.edit" model}}</button>
			  	<button class="btn btn-danger" {{action "delete" model}}><span class="glyphicon glyphicon-trash"></span> Delete</button>
			</div>
		</div>
	</div>
	<br>
	<div class="container">
		{{outlet}}
	</div>
</div>
