<form {{action "save" on="submit"}} class="form-horizontal">
	<div class="row">
		<div class="form-group">
		    {{#if errorMessage}}
		      <h2 class="text-danger">{{errorMessage}}</h2>
		    {{/if}}
		</div>
		<div class="form-group">
		    <label for="inputFirstName">Select an Article</label>
		    {{#power-select class="select"
				selected=model.article
				options=articles
				onchange=(action (mut model.article)) as |article|}}
				{{article.name}}
			{{/power-select}}
		</div>
		<div class="form-group">
			<textarea class="form-control" rows="10" value="model.notes" placeholder="Notes"></textarea>
		</div>
		<div class="text-right col-xs-12 col-sm-12">
		  <button type="submit" class="btn btn-primary">{{fa-icon "check"}} Save</button>
		  <button class="btn btn-default" {{action "cancel"}}>{{fa-icon "remove"}} Cancel</button>
		</div>
	</div>
</form>
